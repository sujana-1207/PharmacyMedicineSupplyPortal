@model PharmacyMedicineSupply.Models.User

@{
    ViewData["Title"] = "Login";
}
    <div class="bg-dark">
        <div class="container ">
            <div class="card align-items-center">
                <h4 class="card-header col-lg-12 text-center">Login</h4>
                <hr />
                <div class="row card-body">
                    <div>
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter your username here." />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password here." />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-danger">@ViewBag.Info</div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-dark btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
